      \usebeamerfont{framesubtitle}\insertframesubtitle
    \end{beamercolorbox}
  }
  \begin{frame}{#2}
  \minipage{0.6\textwidth}
}{
  \endminipage
  \end{frame}
  \endgroup
}

\newcommand{\backmatter}[1][]{
\begingroup
  \themecolor{main}
  \begin{frame}[c]
    \centering
    \begin{minipage}{\textwidth}
      \usebeamercolor[fg]{normal text}
      \centering
      \ifstrequal{#1}{notitle}{}{
        \Huge \inserttitle

        \Large \insertsubtitle
      }
      \vspace{\baselineskip}
      \Large \textsl{\\Thank you for your listening!}
      \vspace{\baselineskip}

      \small
      \makebox[\textwidth][c]{
        \insertauthor \hspace{1em} \insertdate
      }
    \end{minipage}
  \end{frame}
\endgroup
}

